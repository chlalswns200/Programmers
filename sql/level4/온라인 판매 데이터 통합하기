SELECT DATE_FORMAT(OL.SALES_DATE,'%Y-%m-%d')as SALES_DATE,
        OL.PRODUCT_ID,
        OL.USER_ID,
        OL.SALES_AMOUNT
FROM ONLINE_SALE AS OL
WHERE OL.SALES_DATE LIKE '2022-03%'
UNION ALL
SELECT DATE_FORMAT(OFF.SALES_DATE,'%Y-%m-%d')as SALES_DATE,
        OFF.PRODUCT_ID,
        NULL AS USER_ID,
        OFF.SALES_AMOUNT
FROM OFFLINE_SALE AS OFF
WHERE OFF.SALES_DATE LIKE '2022-03%'
ORDER BY SALES_DATE,PRODUCT_ID,USER_ID
